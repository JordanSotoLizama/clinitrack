VITE_FB_API_KEY=__REPLACE_ME__
VITE_FB_AUTH_DOMAIN=__REPLACE_ME__.firebaseapp.com
VITE_FB_PROJECT_ID=__REPLACE_ME__
VITE_FB_APP_ID=__REPLACE_ME__
VITE_FB_MEASUREMENT_ID=G-________

# Flag interno de demo (0/1)
VITE_DEMO=0

# =========================
# Pagos (PayPal)
# =========================
# Para desarrollo puedes dejar "sb" (Sandbox). En tu .env.local usa el Client ID sandbox real.
VITE_PAYPAL_CLIENT_ID=sb

# Moneda usada por el SDK de PayPal.
# USD por defecto para evitar "CURRENCY_NOT_SUPPORTED" en Sandbox.
# Si tu merchant soporta CLP en sandbox/live, puedes cambiar a CLP.
VITE_PAYPAL_CURRENCY=USD